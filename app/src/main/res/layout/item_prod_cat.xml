<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="1dp"
    app:cardElevation="2dp"
    android:layout_marginTop="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catproconst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/catpro_img"
            android:layout_width="110dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@id/catproconst"
            app:layout_constraintStart_toStartOf="@id/catproconst"
            app:layout_constraintEnd_toEndOf="@id/catproconst"
            />

        <TextView
            android:id="@+id/catpro_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejemplo de producto"
            app:layout_constraintTop_toBottomOf="@id/catpro_img"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:lines="1"
            android:paddingHorizontal="8dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/catpro_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/opcional"
            android:text="S/. 99.99"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/catpro_nombre"
            app:layout_constraintStart_toStartOf="@id/catproconst"
            app:layout_constraintEnd_toEndOf="@id/catproconst"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/catpro_btn"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/tercero"
            android:padding="0dp"
            android:text="Agregar"
            android:textSize="11sp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="@id/catproconst"
            app:layout_constraintEnd_toEndOf="@id/catproconst"
            app:layout_constraintStart_toStartOf="@id/catproconst"
            app:layout_constraintTop_toBottomOf="@id/catpro_precio" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>